@using Entities;

@model Awards
@{
    ViewBag.Title = "Edit";

    var currentAward = Model;
    if (currentAward == null)
    {
        currentAward = new Awards();
    }
}

<h2>Details</h2>

<form action="Save" method="post">
    <input name="Id" style="display: none;" value="@currentAward.Id" />
    <div class="form-group">
        <label for="title">Title</label>
        <input name="Title" type="text" class="form-control" id="title" value="@currentAward.Title" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input name="Description" type="text" class="form-control" id="description" value="@currentAward.Description" />
    </div>
    

    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
        @Html.ActionLink("Cancel", "Index", "User", new { }, new { @class = "btn btn-warning" })
    </div>
